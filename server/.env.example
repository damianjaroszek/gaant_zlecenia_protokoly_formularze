# Port serwera
PORT=3011

# Konfiguracja bazy danych PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=erp_database
DB_USER=app_user
DB_PASSWORD=your_secure_password_here
DB_POOL_MAX=20
DB_POOL_MIN=2

# WAŻNE: Wygeneruj silny, losowy secret (min. 32 znaki)
# Użyj: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# Dozwolony origin dla CORS (dokładny adres frontendu)
# W produkcji z Nginx: http://ADRES_SERWERA (port 80/443)
# Bez Nginx: http://ADRES_SERWERA:3010
CORS_ORIGIN=http://localhost:5173

# Poziom logowania: debug, info, warn, error
LOG_LEVEL=info

# Środowisko: development, production
NODE_ENV=development
